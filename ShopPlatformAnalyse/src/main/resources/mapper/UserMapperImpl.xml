<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qrsx.springboot.mapper.UserMapper">

    <select id="selectUser" parameterType="UserInfo" resultType="String">
        select user_name from user_info where user_name = #{userName};
    </select>

    <insert id="insertUser" parameterType="UserInfo">
         insert into user_info (user_name,user_password,user_phone,login_status,active_status) values (#{userName},#{userPassword},#{userPhone},'0','0');
    </insert>

</mapper>
